<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body p-5">
      <h1 class="mb-3 text-center">
        <img src="/secure-icon.png" alt="icon" width="20%" />
      </h1>
      <h2 class="text-center">Login</h2>
      <% if (error) { %>
        <div class="my-2 bg-danger p-2 text-white rounded text-center">
          Login Failed! Please try again.
        </div>
        <% } %>
          <form action="/auth/login" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label text-start">Email</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label text-start">Password</label>
              <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
            </div>
            <div class="mt-4 text-center">
              <button type="submit" class="btn btn-primary btn-block">Login</button>
            </div>
          </form>
          <p class="mt-4 text-center">New User? <a href="/auth/register">Register</a></p>
          <p class="text-center">Forgot Password? <a href="/auth/forgot">Reset</a></p>
    </div>
  </div>
</div>