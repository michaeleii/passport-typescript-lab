<div class="row align-self-center h-100">
  <div class="col-md-6 m-auto">
    <div class="card card-body p-5">
      <h1 class="mb-3 text-center">
        <img src="/secure-icon.png" alt="icon" width="20%" />
      </h1>
      <h2 class="text-center">Login</h2>
      <% if (errorMessage) { %>
        <div class="mt-3 mb-3 text-center text-danger font-weight-bold">
          <strong>
            <%= errorMessage %>
          </strong>
        </div>
        <% } %>
          <form action="/auth/login" method="POST">
            <div class="form-floating mt-3 mb-3">
              <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
              <label for="email" class="form-label text-start">Email</label>
            </div>
            <div class="form-floating mb-3">
              <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
              <label for="password" class="form-label text-start">Password</label>
            </div>
            <div class="mt-4 mb-3 text-center">
              <button type="submit" class="btn btn-primary btn-block">Login</button>
            </div>
            <div class="text-center mb-3">OR</div>
            <div class=" text-center">
              <button formaction="/auth/github" formmethod="get" class="btn btn-secondary btn-block"><i
                  class="fa-brands fa-github"></i> Login with
                Github</button>
            </div>
          </form>
          <p class="mt-4 text-center">New User? <a href="/auth/register">Register</a></p>
          <p class="text-center">Forgot Password? <a href="/auth/forgot">Reset</a></p>
    </div>
  </div>
</div>